{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist/",
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "@src/*": [
        "./src/*"
      ],
    },
    "types": [],
    "lib": [
      "es2016",
      "es2017",
      "esnext",
    ]
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src/**/*.ts"
  ],
  "typeRoots": "./node_modules/@types",
}